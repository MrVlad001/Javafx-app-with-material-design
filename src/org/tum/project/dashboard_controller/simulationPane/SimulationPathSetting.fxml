<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="162.0" prefWidth="1063.0"
            fx:controller="org.tum.project.dashboard_controller.simulationPane.SimulationPathSettingController"
            style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgb(0.0, 0.0, 0.0, 0.15), 6.0, 0.7, 0.0,1.5); -fx-background-radius: 4;">

    <!--layoutX="22.0" layoutY="14.0"-->
    <children>
        <Pane layoutX="29.0" layoutY="29.0" prefHeight="91.0" prefWidth="93.0"
              style="-fx-background-color: #0073B7; -fx-effect: dropshadow(gaussian, rgb(0.0, 0.0, 0.0, 0.15), 6.0, 0.7, 0.0,1.5); -fx-background-radius: 4;">
            <children>
                <ImageView fitHeight="65.0" fitWidth="89.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../images/register.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
        <AnchorPane fx:id="fabPane" layoutX="853.0" layoutY="11.0" prefHeight="141.0" prefWidth="188.0">
            <children>
                <Label fx:id="fabEdit" layoutX="92.0" layoutY="59.0" styleClass="fab">
                    <!--<graphic>-->
                    <!--<MaterialDesignIconView fill="WHITE"-->
                    <!--glyphName="BORDER_COLOR"-->
                    <!--size="26"-->
                    <!--wrappingWidth="22.666656494140625"/>-->
                    <!--</graphic>-->
                    <padding>
                        <Insets right="5.0" top="5.0"/>
                    </padding>
                </Label>
            </children>
        </AnchorPane>
        <JFXTextField fx:id="systemCModelsNocPathEditText" editable="false" labelFloat="true" layoutX="481.0"
                      layoutY="24.0" onMouseClicked="#selectPathForModelAction" prefHeight="27.0"
                      prefWidth="358.0" promptText="SystemC Models-Noc Path"/>
        <JFXTextField fx:id="systemCLibPathEditText" editable="false" labelFloat="true" layoutX="481.0"
                      layoutY="76.0" onMouseClicked="#selectPathForLibraryAction" prefHeight="27.0"
                      prefWidth="358.0" promptText="SystemC  Library Path"/>
        <JFXRadioButton fx:id="defaultPath" layoutX="167.0" layoutY="69.0" onAction="#onDefaultPathButtonAction"
                        prefHeight="41.0" prefWidth="132.0" selected="true" styleClass="custom-jfx-check-box"
                        text="default path" textFill="#141313">
            <font>
                <Font size="14.0"/>
            </font>
            <toggleGroup>
                <ToggleGroup fx:id="filter"/>
            </toggleGroup>
        </JFXRadioButton>
        <JFXRadioButton fx:id="newPath" layoutX="299.0" layoutY="69.0" onAction="#onNewPathButtonAction"
                        prefHeight="41.0" prefWidth="124.0" styleClass="custom-jfx-check-box" text="new path"
                        textFill="#1e1d1d" toggleGroup="$filter">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXRadioButton>
        <Text fill="#10a3f8" layoutX="149.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Simulation Pathing Setting" textAlignment="CENTER" wrappingWidth="299.0">
            <font>
                <Font name="Roboto Medium" size="20.0"/>
            </font>
        </Text>
        <JFXButton fx:id="generateButton1" layoutX="564.0" layoutY="117.0" onAction="#saveInDefaultAction"
                   prefHeight="19.0" prefWidth="142.0" style="-fx-background-color: #2b8fd1;"
                   text="Save as default" textFill="WHITE"/>

    </children>
</AnchorPane>